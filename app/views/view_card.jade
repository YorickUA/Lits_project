extends layout

block header
  div(style="flex-basis: 400px; display: flex; justify-content: center;")
   form(id="input_form" method="POST" action="/")
      div(class="ui input" style="margin-right:3px")
        input(type="hidden" name="action" value="login")
        input(type="password" name="password" placeholder="Enter as admin")
      button(class="ui button primary" type="submit") submit
      span(class="message")= message

block js
 script(src='/js/card_view.js')

block content
 div(class="ui container fluid" style="width:80%; padding: 10px; box-shadow:0 0 10px rgba(0,0,0,0.5);")
   div(id="card_container")
    img(class="card_image" style="margin-right:10px" src="/images/#{avatar_picture}")
    div(style="font-size:13pt; display: inline; min-width: 300px; line-height: 38px;")
      div
        span(style="font-weight:bold") &nbsp;&nbsp; Name:&nbsp;
        span #{name}
      div
        span(style="font-weight:bold") &nbsp;&nbsp; Surname:&nbsp;
        span #{surname}
      div
        span(style="font-weight:bold") &nbsp;&nbsp; Date of birth:&nbsp;
        span #{date_of_birth.toISOString().substring(0, date_of_birth.toISOString().indexOf("T") )}
      div
        span(style="font-weight:bold") &nbsp;&nbsp; Country:&nbsp;
        span #{country}
      div
        span(style="font-weight:bold") &nbsp; Career achievements:&nbsp;
      div
        span(style="font-weight:bold") &nbsp;&nbsp;  Years in game:&nbsp;
        span #{Years_pro}
      div
        span(style="font-weight:bold") &nbsp;&nbsp; Century breaks:&nbsp;
        span #{century_breaks}
      div
        span(style="font-weight:bold") &nbsp;&nbsp; Ranking event titles:&nbsp;
        span #{ranking_titles}
      div
        span(style="font-weight:bold")&nbsp;&nbsp;  World championship titles:&nbsp;
        span #{world_champs}
   div
      span(style="font-weight:bold; font-size:13pt") &nbsp;&nbsp; Biography:&nbsp;
      span(style=" font-size:13pt")  #{bio}
