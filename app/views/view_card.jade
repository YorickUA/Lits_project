extends layout

block header
  div(style="flex-basis: 400px; display: flex; justify-content: center;")
   form(id="input_form" method="POST" action="login")
      div(class="ui input" style="margin-right:3px")
        input(type="hidden" name="id" value="#{id}")
        input(type="password" name="password" placeholder="Enter as admin")
      button(class="ui button primary" type="submit") Submit
      span(class="message")= message

block js


block content

 div(class="ui container fluid" style="width:80%;background-color:white; position:relative; padding: 10px; box-shadow:0 0 10px rgba(0,0,0,0.5);")
   h1(style="font-family: sans-serif;")  Player profile
   hr
   div(class="ui two column doubling stackable grid container")
    div(class="six wide column")
      div(class="ui")
       img(class="ui fluid image " style="margin-right:10px" src="#{avatar_picture}")
      div(style="font-size:13pt; display: inline; min-width: 300px; line-height: 38px;")
        div
          span(class="bold") Personal info:
        div(class="indented")
          span(class="bold ") Name:&nbsp;
          span #{name}
        div(class="indented")
          span(class="bold ") Surname:&nbsp;
          span #{surname}
        div(class="indented")
          span(class="bold ") Date of birth:&nbsp;
          span #{date_of_birth.toISOString().substring(0, date_of_birth.toISOString().indexOf("T") )}
        div(class="indented")
          span(class="bold ")  Country:&nbsp;
          span #{country}
        div
          span(class="bold") Career achievements:&nbsp;
        div(class="indented")
          span(class="bold ")  Years in game:&nbsp;
          span #{Years_pro}
        div(class="indented")
          span(class="bold ") Century breaks:&nbsp;
          span #{century_breaks}
        div(class="indented")
          span(class="bold ") Ranking event titles:&nbsp;
          span #{ranking_titles}
        div(class="indented")
          span(class="bold ") World championship titles:&nbsp;
          span #{world_champs}
    div(class="ten wide column")
      span(style="font-weight:bold; font-size:13pt") Biography:&nbsp;
      span(style=" font-size:13pt; white-space:pre-line;")  #{bio}
